.login-page
    .login-container
        position absolute
        height 488px
        width 100%
        background-color transparent
        top 50%
        margin-top -244px
        border-radius 11px
        font-family PingFangSC-Medium
        text-align center
        .container
            display inline-block
            position relative
            width calc(100% - 40px)
            height 100%
            max-width 800px
            border-radius 18px
            background-color #fff
            box-shadow 0px 2px 33px 0px rgba(0,104,255,0.11)
            .content-left,.content-right-top,.content-right
                display inline-block
                vertical-align top
            .content-left
                float left
                .login-left-image
                    border-top-left-radius 18px
                    border-bottom-left-radius 18px
            .content-right-top
                position absolute
                top -60px
                right  -90px
                .rocket
                    width 220px
            .content-right
                width 460px
                .login-render,.password-login,.forget-password
                    display inline-block
                    .send-code-button,.login-button,.sign-button
                        height 40px
                        border-radius 20px
                        font-weight normal
                        display inline-block
                    .send-code-button,.login-button
                        color #fff
                        font-size 13px
                    .login-button,.sign-button
                        width 280px
                    .send-code-button
                        width 100px
                        display inline-block
                        margin-left 6px
                    .sign-button
                        background-color #EDF4FF
                        margin-top 13px
                        font-size 14px
                        color #0068FF
                .login-render
                    width 400px
                    text-align center
                    padding 90px 86px 86px 50px
                    .login-title
                        width 120px
                        height 33px
                        font-size 24px
                        font-weight normal
                        color rgba(27,27,27,1)
                        line-height 33px
                        display inline-block
                        margin-bottom 46px
                    .veri-input
                        display inline-block
                    .phone-email-input,.verify-input
                        height 40px
                        background rgba(255,255,255,1)
                        border-radius 20px
                        border 1px solid #E7E9F1
                        padding-left 20px
                    .phone-email-input
                        width 268px
                        margin-bottom 10px
                    .verify-input
                        width 124px
                        display inline-block
                    .chose-login
                        font-size 13px
                        font-weight normal
                        margin 11px 24px
                        .password-login
                            margin-right  177px
                            a
                                color #0068FF
                        .forget-password
                            a
                                color #999AA0
                
            
            
            


    
    
