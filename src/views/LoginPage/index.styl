.login-page
    background-color #fff
    width 800px
    height 488px
    margin 100px auto
    box-shadow 0px 2px 33px 0px rgba(0,104,255,0.11)
    border-radius 11px
    font-family PingFangSC-Medium
    .content-left,.content-right-top,.content-right
        display inline-block
        vertical-align top
    .content-left
        width 312px
        height 488px
    .content-right-top
        width 164px
        height 120px
        position relative
        left 690px
        top -550px
    .content-right
        width 460px
        .login-render,.password-login,.forget-password
            display inline-block
            .send-code-button,.login-button,.sign-button
                height 40px
                border-radius 20px
                font-weight normal
                display inline-block
            .send-code-button,.login-button
                color #fff
                font-size 13px
            .login-button,.sign-button
                width 314px
            .send-code-button
                width 120px
                display inline-block
                margin-left 6px
            .sign-button
                background-color #EDF4FF
                margin-top 13px
                font-size 14px
                color #0068FF
        .login-render
            width 400px
            text-align center
            padding 90px 86px 86px 50px
            .login-title
                width 120px
                height 33px
                font-size 24px
                font-weight normal
                color rgba(27,27,27,1)
                line-height 33px
                display inline-block
                margin-bottom 46px
            .phone-email-input,.verify-input
                height 40px
                background rgba(255,255,255,1)
                border-radius 20px
                border 1px solid #E7E9F1
                padding-left 20px
            .phone-email-input
                width 292px
                margin-bottom 10px
            .verify-input
                width 166px
            .chose-login
                font-size 13px
                font-weight normal
                margin 11px 24px
                .password-login
                    margin-right  177px
                    a
                        color #0068FF
                .forget-password
                    a
                        color #999AA0
                
            
            
            


    
    
